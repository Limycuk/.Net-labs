<Window x:Class="WpfStudent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStudent"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="create" Content="Добавить" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Width="140" Click="onAdd"/>
        <Button x:Name="show" Content="Отобразить" HorizontalAlignment="Left" Margin="15,50,0,0" VerticalAlignment="Top" Width="140" Click="onShow"/>
        <Button x:Name="save" Content="Сохранить" HorizontalAlignment="Left" Margin="15,85,0,0" VerticalAlignment="Top" Width="140" Click="onSave"/>
        <Button x:Name="load" Content="Загрузить" HorizontalAlignment="Left" Margin="15,120,0,0" VerticalAlignment="Top" Width="140" Click="onLoad"/>
        <Button x:Name="exit" Content="Выйти" HorizontalAlignment="Left" Margin="15,155,0,0" VerticalAlignment="Top" Width="140" Click="onExit"/>
    </Grid>
</Window>
